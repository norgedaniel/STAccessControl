@page "{id:int=0}"
@model STCA_App.Pages.TiposAreasAccesoRegistrarModel
@{
}

@{
    if (Model.Input.TipoAreaAccesoId <= 0)
    {
        <h1>Nuevo Tipo de Areas de Acceso</h1>
    }
    else
    {
        <h1>Editando Tipo de Areas de Acceso</h1>
    }
}


<div>

    <form asp-page="TiposAreasAccesoRegistrar">

        <label asp-for="Input.Nombre"></label>
        <input asp-for="Input.Nombre" />
        <div>
            <span asp-validation-for="Input.Nombre"></span>
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <button>Guardar</button>


    </form>



</div>